<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.revoservice.calcul.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#ffffff">

       <include layout="@layout/calculator_result"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <Button
                android:id="@+id/btn_delete"
                android:layout_marginTop="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_small_bracket"
                android:layout_marginTop="5dp"

                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="( )"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_percentage"
                android:layout_marginTop="5dp"

                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_back"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Back"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"

                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />











</LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_eight"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_nine"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"

                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />











        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_five"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_six"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_sous"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />











        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_two"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_three"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_plus"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />











        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_zero"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_div"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:id="@+id/btn_egal"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:minHeight="50dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"
                />











        </LinearLayout>







    </LinearLayout>




</LinearLayout>


</android.support.constraint.ConstraintLayout>
